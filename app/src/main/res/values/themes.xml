<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PiK4A" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">10</item>
        <item name="boxStrokeErrorColor">@color/colorAccent</item>
        <item name="counterOverflowTextColor">@color/black</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
    </style>

    <style name="StyleSpace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/ColorPrimarySpace</item>
        <item name="colorPrimary">@color/TextColorPrimarySpace</item>
        <item name="colorPrimaryDark">@color/ColorPrimarySpaceDark</item>
        <item name="android:windowBackground">@color/SpaceWindowBackground</item>
        <item name="android:navigationBarColor">@color/NBCSpace</item>
        <item name="colorSurface">@color/CSSpace</item>
        <item name="fontFamily">@font/space</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
        <item name="materialButtonStyle">@style/SpaceButton</item>
    </style>

    <style name="StyleMoon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/ColorPrimaryMoon</item>
        <item name="colorPrimary">@color/TextColorPrimaryMoon</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryMoonDark</item>
        <item name="android:windowBackground">@color/MoonWindowBackground</item>
        <item name="android:navigationBarColor">@color/NBCMoon</item>
        <item name="buttonStyle">@color/black</item>
        <item name="colorSurface">@color/CSMoon</item>
        <item name="fontFamily">@font/moon</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent
        </item><item name="materialButtonStyle">@style/MoonButton</item>
    </style>

    <style name="StyleMartian" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/ColorPrimaryMartian</item>
        <item name="colorPrimary">#6C0101</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryMartianDark</item>
        <item name="android:windowBackground">@color/MartianWindowBackground</item>
        <item name="android:navigationBarColor">@color/NBCMartian</item>
        <item name="colorSurface">@color/CSMartian</item>
        <item name="fontFamily">@font/martian</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>


    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="SpaceButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>
    <style name="MoonButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>



</resources>