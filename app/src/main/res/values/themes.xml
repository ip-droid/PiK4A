<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PiK4A" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">10</item>
        <item name="boxStrokeErrorColor">@color/colorAccent</item>
        <item name="counterOverflowTextColor">@color/black</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
    </style>

    <style name="Theme.Space" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/ColorPrimarySpace</item>
        <item name="colorPrimary">@color/TextColorPrimarySpace</item>
        <item name="colorPrimaryDark">@color/ColorPrimarySpaceDark</item>
        <item name="android:windowBackground">@color/SpaceWindowBackground</item>
        <item name="android:navigationBarColor">@color/NBCSpace</item>
    </style>

    <style name="Theme.Moon" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorPrimary">@color/ColorPrimaryMoon</item>
        <item name="colorPrimary">@color/TextColorPrimaryMoon</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryMoonDark</item>
        <item name="android:windowBackground">@color/MoonWindowBackground</item>
        <item name="android:navigationBarColor">@color/NBCMoon</item>
        <item name="buttonStyle"></item>
    </style>

    <style name="Theme.Martian" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorPrimary">@color/ColorPrimaryMartian</item>
        <item name="colorPrimary">@color/TextColorPrimaryMartian</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryMartianDark</item>
        <item name="android:windowBackground">@color/MartianWindowBackground</item>
        <item name="android:navigationBarColor">@color/NBCMartian</item>
    </style>


</resources>